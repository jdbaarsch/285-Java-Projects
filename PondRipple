package ripples;

import java.awt.Point;

/**
 * I should have much more extended comments in this document
 * @author jbaarsch
 */
public class PondRipple {
    Point p;
    int size = 0;
    public PondRipple(Point p)
    {
        this.p = p;
    }
    
    public void grow(int factor)
    {
        size = size+factor;
    }
    
    
    
}
